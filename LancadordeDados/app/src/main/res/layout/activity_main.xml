<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F282C"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonJogar"
        android:layout_width="175dp"
        android:layout_height="90dp"
        android:backgroundTint="#152788"
        android:fontFamily="@font/bangers"
        android:insetTop="15dp"
        android:insetBottom="0dp"
        android:text="@string/jogar_dados"
        android:textAlignment="center"
        android:textSize="36sp"
        app:iconTint="#BA3131"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.751" />

    <ImageView
        android:id="@+id/imageDado1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonJogar"
        app:layout_constraintEnd_toStartOf="@+id/imageDado2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dado1" />

    <ImageView
        android:id="@+id/imageDado2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonJogar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageDado1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dado1" />

</androidx.constraintlayout.widget.ConstraintLayout>